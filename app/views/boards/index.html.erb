<%= render partial: "layouts/nav"%>
<div class="main-box">
  <div class="header-box">
    <h1 class="header-text header-border">掲示板一覧</h1>
  </div>

  <div class="form-box">
    <% if @boards != nil %>
    <% @boards.each do |board|%>
    <div class="card mb-3">
    <% if board.image.attached? %>
      <%= image_tag board.image, class:"bd-placeholder-img card-img-top" %>
    <% else %>
      <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"/><text x="50%" y="50%" fill="#dee2e6" dy=".3em">No Image</text></svg>
    <% end %>
      <div class="card-body">
        <h4 class="card-title"><%= board.title %></h4>
        <p class="card-text"><%= board.prefecture.name %></p>
        <p class="card-text"><%= board.municipality %></p>
        <%= link_to "投稿詳細へ", board_path(board.id),method: :get, class:"btn btn-primary"%>
        <p class="card-text"><small class="text-muted"><%= board.created_at %></small></p>
      </div>
    </div>
    <% end %>
    </div>
    <% end %>
</div>
