<%= render partial: "layouts/nav"%>
<%= form_with model: @user, url:user_registration_path, local: true do |f| %>
<div class="main-box">
  <div class="header-box">
    <h1 class="header-text header-border">ユーザー新規登録</h1>
  </div>
  <div class="form-box">
  <%= render 'layouts/error_messages', model: f.object %>
    <div class="form-group">
      <label for="exampleFormControlInput1">ニックネーム</label>
      <%= f.text_field :nickname, class:"form-control", id:"nickname", placeholder:"例)山田 太郎", maxlength:40%>
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1">Email</label>
      <%= f.email_field :email, class:"form-control", id:"email", placeholder:"PC,携帯電話どちらでも可"%>
      <small id="emailHelp" class="form-text text-muted">半角で入力してください。</small>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">パスワード</label>
      <%= f.password_field :password, class:"form-control", id:"password", placeholder:"半角英数字で８文字以上"%>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">パスワード(確認用)</label>
      <%= f.password_field :password_confirmation, class:"form-control", id:"password_confirmation", placeholder:"再度入力ください"%>
    </div>
      <%= f.submit "新規登録",class:"btn btn-primary" %>
    </div>
  </div>
</div>
<% end %>
