<%= render partial: "layouts/nav"%>
<%= form_with model: @user, url:user_session_path, local: true do |f| %>
<div class="main-box">
  <div class="header-box">
    <h1 class="header-text header-border">ログイン</h1>
  </div>
  <div class="form-box">
  <div class="error-alert text-danger">
    <%= flash[:alert] %>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Email</label>
      <%= f.email_field :email, class:"form-control", id:"email", placeholder:"Email"%>
    <small id="emailHelp" class="form-text text-muted">半角で入力してください。</small>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <%= f.password_field :password, class:"form-control", id:"password", placeholder:"半角英数字で８文字以上"%>
    <%= f.submit "ログイン",class:"btn btn-primary btn-around" %>
  </div>
  </div>
<% end %>
<%= render partial: "layouts/footer"%>